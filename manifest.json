{
  "manifest_version": 3,
  "name": "Anti Brainrot",
  "version": "1.0.0",
  "description": "Reclaim your focus by removing YouTube's algorithmic distractions",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
    "storage",
    "tabs"
  ],

  "host_permissions": [
    "*://*.youtube.com/*"
  ],

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],

  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "Anti Brainrot Settings",
    "default_popup": "popup.html"
  }
}
